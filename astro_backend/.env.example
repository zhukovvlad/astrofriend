# Astro-Soulmate Environment Configuration
# Copy this file to .env and fill in your values

# App Settings
DEBUG=true
APP_NAME="Astro-Soulmate API"

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:astro_pass@localhost:5432/astro_db
DATABASE_URL_SYNC=postgresql://postgres:astro_pass@localhost:5432/astro_db

# JWT Authentication
# IMPORTANT: Generate a secure secret for production!
# python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-super-secret-key-change-in-production-please
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

